{
  "Database": {
    "Interceptors": {
      "SlowQueryThresholdMs":   100,
      "SlowCommandThresholdMs": 100
    }
  },
  "Redis": {
    "Password": "password",
    "Ssl": false,
    "ConnectTimeout": 6000,
    "ConnectRetry": 2,
    "Database": 10,
    "Hosts": [
      {
        "Host": "10.208.11.184",
        "Port": "6379"
      }
    ]
  },
  "Jwt": {
    "Issuer": "",
    "Audience": "",
    "Secret": "",
    "ExpirationInMinutes": 0
  },
  "Cors": {
    "AllowAll": true,
    "AllowOrigins": []
  },
  "Ldap": {
    "Host": "",
    "Port": 389,
    "Domain": ""
  },
  "Ftp": {
    "Host": "",
    "Port": 21,
    "UserName": "",
    "Password": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Exceptions",
      "Serilog.Sinks.Http",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path":                     "Logs/.txt",
          "rollingInterval":          "Day",
          "rollOnFileSizeLimit":      true,
          "fileSizeLimitBytes":       50000000,
          "retainedFileCountLimit":   2,
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "VsaSample"
    }
  }
}
